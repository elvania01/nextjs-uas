// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produk {
  id          String     @id @default(uuid())
  name        String
  price       Int
  image       String?
  description String?
  category    String?
  stock       Int
  transaksi   Transaksi[]
}

model Transaksi {
  id_transaksi      Int      @id @default(autoincrement())
  produkId          String
  produk            Produk   @relation(fields: [produkId], references: [id])
  nama_pembeli      String
  tanggal_transaksi DateTime
  total_harga       Int
}
