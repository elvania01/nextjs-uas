generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produk {
  id          String      @id @default(uuid())
  name        String
  price       Int
  image       String?
  description String?
  category    String?
  stock       Int
  transaksi   Transaksi[]
}

model Transaksi {
  id_transaksi      Int      @id @default(autoincrement())
  produkId          String
  nama_pembeli      String
  tanggal_transaksi DateTime
  total_harga       Int
  produk            Produk   @relation(fields: [produkId], references: [id])
}

model UserCustomer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())
}
