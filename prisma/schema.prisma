generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produk {
  id          String      @id @default(uuid())
  name        String
  price       Int
  image       String?
  description String?
  category    String?
  stock       Int
  transaksi   Transaksi[]
}

model Transaksi {
  id_transaksi      Int      @id @default(autoincrement())
  produkId          String
  nama_pembeli      String
  tanggal_transaksi DateTime
  total_harga       Int
  produk            Produk   @relation(fields: [produkId], references: [id])
}

model Customer {
  id        Int               @id @default(autoincrement())
  name      String
  email     String            @unique
  username  String            @unique
  password  String
  profile   ProfileCustomer?
}

model ProfileCustomer {
  id           Int      @id @default(autoincrement())
  customerId   Int      @unique
  bio          String?  // opsional
  alamat       String?  // opsional
  customer     Customer @relation(fields: [customerId], references: [id])
}
